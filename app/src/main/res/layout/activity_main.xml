<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mini Quiz - Bartek"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROZPOCZNIJ QUIZ"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pytanie pojawi się tutaj"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/answerButtonA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedź A"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/answerButtonB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedź B"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/answerButtonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedź C" />

    </LinearLayout>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik: 0"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESETUJ QUIZ" />

</LinearLayout>